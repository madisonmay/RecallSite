extends layout

block content

    div.centered
        div.title(style="height: 80px")
            | Connect more accounts
        div.fix
            a(href='/connect/facebook/')
                img.fb.sm(id='fb', src='images/facebok-icon.png')
        div.fix
            a(href='/connect/twitter/')
                img.tw.sm(id='tw', src='images/twitter-icon.png')
        div.fix
            a(href='/connect/gplus/')
                img.gp.sm(id='gp', src='images/gplus-icon.png')

    div.hero-unit.fixwidth(style="margin-top: 30px")
        p Having trouble remembering where that post was?
        form(name='search', action='/search/facebook', method='get')
            | <input type='text', placeholder='Search...' name='query.q')>
            input.btn.btn-success(style="margin-top: -15px; margin-left: 15px; max-width: 55px;", value='Submit')

    script
        $(document).ready(function() {
            var fb = '#{fb}'
            var tw = '#{tw}'
            console.log(fb)
            console.log(tw)
            if (fb) {
                $('.fb').parent().parent().remove();
                $('.fb').remove();
            }

            if (tw) {
                $('.tw').parent().parent().remove();
                $('.tw').remove();
            }

            $('.sm').hover(function() {
                $(this).toggleClass('hovering');
                console.log('Hover');
            })
        });


